<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Scorebot</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  </head>
  <body>
      <fieldset>
          <h1 align="center"> Scorebot </h1>
          <div class="container">
              <form action="/" method="get">
                  <input type="submit" class="ghost-button" value="Back to Home">
              </form>
              <br>
              <form action="/matches" method="get">
                    <input type="submit" class="ghost-button" value="Back to Matches">
            </form>
          </div>
      <h3 align="center"> Live Scores </h3> 
        <% if(matches !== null){ %>
          <% for(var i=0; i < matches.length; i++) { %>
            <p><%= JSON.stringify(matches[i]) %></p>
          <% } %>
        <% } else { %>
          <p> No results yet </p>
        <% } %>
        <% if(error !== null){ %>
          <p><%= error %></p>
        <% } %>
      </fieldset>
  </body>
</html>